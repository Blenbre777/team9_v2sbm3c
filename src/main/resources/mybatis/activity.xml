<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="dev.mvc.activity.ActivityDAOInter">	
	<!-- 생성 -->
	<insert id="create_activity" parameterType="dev.mvc.activity.ActivityVO" >
    	INSERT INTO activity(activityID, planID,aname,activityCnt,aDate) VALUES(activity_seq.nextval,#{planID},#{aname},0,sysdate)
	</insert>
  	
  	<!-- 활동 하나 조회 -->
  	<select id="read_activity" resultType="dev.mvc.activity.ActivityVO" parameterType="int" >
    	SELECT activityID, pname FROM activity WHERE activityID=#{activityID}
	</select>
	
	<!-- 특정 여행지 활동 전체 조회-->
	<select id="list_all_activity" resultType="dev.mvc.activity.ActivityVO" parameterType="int" >
    	SELECT activityID, planID, aname , aDate FROM activity WHERE planID=#{planID} ORDER BY activityID DESC
	</select>
	
	<!-- 수정 -->
	<update id="update_activity" parameterType="dev.mvc.activity.ActivityVO" >
    	UPDATE activity SET pname=#{pname} WHERE activityID=#{activityID}
	</update>
	
	<!-- 삭제 -->
	<delete id="delete_activity" parameterType="int">
    	DELETE FROM activity WHERE activityID=#{activityID}
  	</delete>
  	
  	 <!-- 특정 여행지에 속한 레코드 갯수를 리턴 -->
  <select id="count_by_planID" resultType="int" parameterType="int">
    SELECT COUNT(*) as cnt FROM activity WHERE planID=#{planID}
  </select>
  
  <!-- 특정 여행지에 속한 모든 레코드 삭제 -->
  <delete id="delete_by_planID" parameterType="int">
    DELETE FROM activity WHERE planID=#{planID}
  </delete>
          
</mapper>